{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.test.ts",
    "**/*.tsx",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "build",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "isolatedModules": true,
    "module": "esnext",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@App/*": [
        "./app/*"
      ],
      "@TestUtils/*": [
        "./jest/*"
      ]
    },
    "noEmit": true
  }
}